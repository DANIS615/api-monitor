{
    "version": "1.0",
    "description": "Skill activation triggers for Claude Code API Monitor",
    "skills": {
        "electron-react-app": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "Electron + React patterns for desktop application development",
            "promptTriggers": {
                "keywords": [
                    "Electron",
                    "BrowserWindow",
                    "IPC",
                    "contextIsolation",
                    "electron-store",
                    "preload",
                    "desktop app",
                    "React component",
                    "Vite"
                ],
                "intentPatterns": [
                    "(create|add|modify|build).*?(Electron|BrowserWindow|desktop app)",
                    "(how to|best practice).*?(Electron|React|Vite)",
                    "(fix|debug).*?(Electron|IPC|preload)",
                    "electron.*?(window|communication|store)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "electron/**/*.js",
                    "src/**/*.jsx",
                    "src/**/*.css",
                    "vite.config.js",
                    "package.json"
                ],
                "pathExclusions": [
                    "**/node_modules/**",
                    "**/*.test.jsx",
                    "**/*.spec.jsx"
                ],
                "contentPatterns": [
                    "BrowserWindow",
                    "ipcMain",
                    "ipcRenderer",
                    "contextIsolation",
                    "electron-store",
                    "from 'react'",
                    "useState",
                    "useEffect"
                ]
            }
        },
        "api-monitoring": {
            "type": "domain",
            "enforcement": "suggest",
            "priority": "high",
            "description": "API monitoring, authentication, and testing patterns",
            "promptTriggers": {
                "keywords": [
                    "API",
                    "endpoint",
                    "monitor",
                    "axios",
                    "Bearer token",
                    "authentication",
                    "401",
                    "403",
                    "post",
                    "get",
                    "headers",
                    "body",
                    "request",
                    "response",
                    "log",
                    "chart"
                ],
                "intentPatterns": [
                    "(test|monitor|check).*?(API|endpoint)",
                    "(add|create|configure).*?(API|authentication|token)",
                    "(fix|debug).*?(401|403|auth|endpoint)",
                    "(how to|best practice).*?(monitor|test|API)",
                    "axios.*?(post|get|put|delete)"
                ]
            },
            "fileTriggers": {
                "pathPatterns": [
                    "src/components/ApiMonitor.jsx",
                    "src/components/ApiMonitor.css",
                    "server/server.js",
                    "src/**/*.jsx"
                ],
                "pathExclusions": [
                    "**/node_modules/**"
                ],
                "contentPatterns": [
                    "axios\\.",
                    "Bearer",
                    "Authorization",
                    "testApi",
                    "getAuthToken",
                    "apiConfigs",
                    "authConfigs"
                ]
            }
        }
    },
    "notes": {
        "enforcement_types": {
            "suggest": "Skill suggestion appears but doesn't block execution",
            "block": "Requires skill to be used before proceeding (guardrail)",
            "warn": "Shows warning but allows proceeding"
        },
        "priority_levels": {
            "critical": "Highest - Always trigger when matched",
            "high": "Important - Trigger for most matches",
            "medium": "Moderate - Trigger for clear matches",
            "low": "Optional - Trigger only for explicit matches"
        },
        "customization": {
            "pathPatterns": "Adjust to match your project structure",
            "keywords": "Add domain-specific terms relevant to API monitoring",
            "intentPatterns": "Use regex for flexible user intent matching"
        }
    }
}

